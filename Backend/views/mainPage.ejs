<body style="background: #fff1cf">
<% include common/header.ejs %>
<div class = "order-container">
    <h1>Ваші замовлення: <span id="norders" class="badge badge-pill">0</span></h1>
    <div id="cart"></div>
    <button class="btn btn-warning make-order">Купити</button>
    <b><span id="total">0</span> грн</b>
    <button class="clear-order">Очистити<br> замовлення</button>
</div>

<div class="container">

    <div class="filter-pizza">
        <h1 class="all-pizzas">Усі піци<br></h1>
        <ul class="nav nav-pills">
            <li><a href="#" class = "active choose-type filter-all">Усі </a></li>
            <li><a href="#"  class="choose-type filter-meat">М'ясні </a></li>
            <li><a href="#"  class="choose-type filter-pineapple">З ананасом </a></li>
            <li><a href="#"  class="choose-type filter-mushrooms">З грибами</a></li>
            <li><a href="#"  class="choose-type filter-seafood">З морепродуктами</a></li>
            <li><a href="#"  class="choose-type filter-vegan">Вега</a></li>
        </ul>

    </div>


    <div class="row" id="pizza_list">
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail pizza-card">
                </div>
            </div>
        </div>
    <div class="block-down">
        <div class="title-discount">Цього тижня <br>на все</div><br>
        <div class="content-discount">-20%</div>
        <img class="discount-bottom" src="assets/images/discount.svg">
    </div>

        </div>
    </div>
</div>


<% include common/footer.ejs %>

</body>
</html>